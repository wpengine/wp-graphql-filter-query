{
  "version": "0.2.0",
  "configurations": [
  {
    "name": "Listen for Xdebug",
    "type": "php",
    "request": "launch",
    "port": 9003,
    "xdebugSettings": {
      "max_children": 128,
      "max_data": 1024,
      "max_depth": 3,
      "show_hidden": 1
    },
    "pathMappings": {
      "/var/www/html/wp-content/plugins/wp-graphql-filter-query": "${workspaceFolder}",
      "/var/www/html": "${workspaceFolder}/.wordpress/wordpress",
    }
  }
  ]
}